{
  "name": "openl-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for OpenL Studio Rules Management System",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "openl-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:http": "node dist/server.js",
    "start:proxy": "node dist/mcp-proxy.js",
    "dev": "tsc && node dist/index.js",
    "dev:http": "tsc && node dist/server.js",
    "dev:proxy": "tsc && node dist/mcp-proxy.js",
    "watch": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --testPathIgnorePatterns=integration",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand tests/integration",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "mcp",
    "openl-studio",
    "rules-engine",
    "brms"
  ],
  "author": "",
  "license": "LGPL-3.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "form-data": "^4.0.1",
    "yaml": "^2.8.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.17.0",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
